<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/title_TextView"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body_TextView"
            android:layout_alignStart="@+id/body_TextView"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Body"
            android:id="@+id/body_TextView"
            android:layout_below="@+id/title_TextView"
            android:layout_toRightOf="@+id/color_ImageView"
            android:layout_toEndOf="@+id/color_ImageView"
            android:paddingLeft="10dp"
            android:paddingRight="30dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/reminder_ImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:background="#00ffffff"
            android:src="@android:drawable/ic_delete"
            android:paddingTop="5dp"
            android:paddingRight="5dp" />

        <ImageView
            android:layout_width="40px"
            android:layout_height="wrap_content"
            android:id="@+id/color_ImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="#3c3c3c" />

    </RelativeLayout>
</LinearLayout>